<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="courseManagement.Course">
  <select id="findById" parameterType="int" resultType="courseManagement.Course">
    SELECT * FROM Course WHERE Id = #{id}
  </select>
  
  <select id="findAll" resultType="courseManagement.Course">
    SELECT * FROM Course
  </select>
  
  <insert id="insert" parameterType="courseManagement.Course" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO Course (Title, CourseType) VALUES (#{title}, #{courseType})
  </insert>
  
  <update id="update" parameterType="courseManagement.Course">
    UPDATE Course SET Title=#{title}, CourseType=#{courseType} WHERE Id=#{id}
  </update>
  
  <delete id="delete" parameterType="int">
    DELETE FROM Course WHERE Id=#{id}
  </delete>
</mapper>
